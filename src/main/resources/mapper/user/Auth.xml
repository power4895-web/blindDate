<mapper namespace="com.example.self_board_project.user.mapper.AuthMapper">

	<select id="getUserInfo" resultType="com.example.self_board_project.core.authority.Auth">
	/** getUserInfo **/
	SELECT 
		 id
		, login_id 
		, real_name
		, password 
	FROM user  t1
	WHERE login_id = #{loginId}
	</select>


